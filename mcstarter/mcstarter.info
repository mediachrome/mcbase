name = Mediachrome starter
description = Mediachrome starter theme
base theme = mcbase
core = 7.x

screenshot = images/screenshot.png

; stylesheets ----------------------------------------------------------------
; use responsive.css to override the base theme page layout

stylesheets[screen][] = css/style.css
stylesheets[screen][] = css/responsive.css
; stylesheets[screen][] = css/better-messages.css
stylesheets[print][] = css/print.css

; Regions --------------------------------------------------------------------
; these content regions are available for block placement
; some are special hidden regions: page_top, page_bottom, and help

regions[header_first] = Header first
regions[header_second] = Header second
regions[branding] = Branding
regions[content_top] = Content top
regions[content] = Content
regions[content_bottom] = Content bottom
regions[highlighted] = Highlighted
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[pre_footer] = Pre-footer
regions[footer_first] = Footer first
regions[footer_second] = Footer second
regions[footer_third] = Footer third
regions[footer] = Footer
regions[page_top] = Page top
regions[page_bottom] = Page bottom
regions[help] = Help

; Options --------------------------------------------------------------------
; these are the checkboxes that are available on the theme settings page.

; these are the stock options
features[] = logo
; features[] = name
; features[] = slogan
; features[] = node_user_picture
;'features[] = comment_user_picture
; features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Default theme settings
settings[breadcrumb_display]   = yes
settings[breadcrumb_separator] = ' â€º '
settings[breadcrumb_home]      = 1
settings[breadcrumb_trailing]  = 1
settings[breadcrumb_title]     = 1
settings[mcbase_rebuild_registry] = 1
settings[mcbase_enable_960_grid] = 1
settings[mcbase_grid_colour] = dark
settings[mcbase_960gs_default_state] = grid-disabled

