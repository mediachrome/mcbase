
; Theme Info -----------------------------------------------------------------
; required information about the theme

name = Mediachrome base
description = Mediachrome base theme, being a mashup of Boron and Tao and Clean and etc.
core = 7.x
engine = phptemplate
screenshot = images/screenshot.png

; Stylesheets  ---------------------------------------------------------------
; We use [screen] instead of [all] to avoid browser styles affecting
; other media types. 

; One day, IE stylesheets will be loaded through template.php

stylesheets[screen][] = css/mcbase.reset.css
stylesheets[screen][] = css/mcbase.layout.css
stylesheets[screen][] = css/mcbase.base.css

; Scripts  ---------------------------------------------------------------
; scripts[] = js/grid.js
; This is now activated through template.php

; Regions --------------------------------------------------------------------
; these content regions are available for block placement
; some are special hidden regions: page_top, page_bottom, and help

; these are the stock regions
regions[header] = Header
regions[branding] = Branding
regions[content_top] = Content top
regions[content] = Content
regions[content_bottom] = Content bottom
regions[highlighted] = Highlighted
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[footer_first] = Footer first
regions[footer_second] = Footer second
regions[footer_third] = Footer third
regions[footer_fourth] = Footer fourth
regions[page_top] = Page top
regions[page_bottom] = Page bottom
regions[help] = Help

; Options --------------------------------------------------------------------
; these are the checkboxes that are available on the theme settings page.

; these are the stock options
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; additional theme settings
